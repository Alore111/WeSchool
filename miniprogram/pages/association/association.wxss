page {
  background-color: #f6f6f6;
}
.wrap {
  background-image: linear-gradient(#1e2266, #ffe7e7);
}
.wrap .caption {
  padding: 24rpx;
}
.wrap .caption .title {
  font-weight: 700;
  text-align: center;
  color: white;
}
.wrap .caption .tip {
  padding-top: 18rpx;
  font-size: 28rpx;
  color: #e0e0e0;
}
.wrap .list_wrap {
  padding: 24rpx;
  background-color: white;
  border-top-right-radius: 32rpx;
  border-top-left-radius: 32rpx;
}
.wrap .list_wrap .list_item {
  display: flex;
  flex-direction: row;
  padding: 8rpx;
}
.wrap .list_wrap .list_item .left {
  flex: 1;
}
.wrap .list_wrap .list_item .rigth {
  flex: 3;
  padding-left: 24rpx;
  background-color: #eeeeee;
  border-radius: 26rpx;
}
.wrap .list_wrap .submit {
  display: flex;
  justify-content: center;
  align-content: center;
  text-align: center;
  border-radius: 48rpx;
  margin-top: 52rpx;
  width: 80%;
  color: white;
  background-color: #3188c3;
}
.test_wrap {
  padding-top: 20%;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.test_wrap .test_img image {
  height: 180rpx;
  width: 180rpx;
}
.asso_wrap .mess_item {
  padding: 24rpx;
  border-bottom: 1rpx solid #c0c0c0;
  margin-left: 12rpx;
  margin-right: 12rpx;
  border-radius: 24rpx;
  margin-top: 24rpx;
  background-color: white;
}
.asso_wrap .mess_item .mess_wrap {
  display: flex;
  flex-direction: row;
  padding: 6rpx;
  font-size: 34rpx;
}
.asso_wrap .mess_item .mess_wrap .title {
  flex: 1;
  font-weight: 600;
}
.asso_wrap .mess_item .mess_wrap .mess {
  padding-left: 24rpx;
  flex: 3;
  color: #858585;
}
.asso_wrap .bt_list {
  display: flex;
  flex-direction: column;
  padding-top: 48rpx;
}
.asso_wrap .bt_list .new_bt {
  background-color: #4a6f94;
  text-align: center;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 24rpx;
  padding: 8rpx;
  color: white;
}
.asso_wrap .bt_list .act_bt {
  text-align: center;
  background-color: #538b53;
  margin-top: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  padding: 8rpx;
  color: white;
  border-radius: 24rpx;
}
.asso_wrap .bt_list .race_bt {
  text-align: center;
  margin-top: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 24rpx;
  background-color: #6f538b;
  padding: 8rpx;
  color: white;
}
.asso_wrap .bt_list .del_bt {
  text-align: center;
  margin-top: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 24rpx;
  background-color: #b02e2e;
  padding: 8rpx;
  color: white;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  position: relative;
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  padding: 15rpx 0;
  z-index: 99999;
  border-radius: 20rpx;
}
.commodity_attr_box .caption {
  text-align: center;
  font-size: 34rpx;
}
.commodity_attr_box .activite_img {
  background-color: rgba(241, 229, 201, 0.26);
  text-align: center;
}
.commodity_attr_box .activite_img image {
  padding: 96rpx;
  width: 90rpx;
  height: 90rpx;
}
.commodity_attr_box .input_wrap {
  padding: 12rpx;
  font-size: 32rpx;
}
.commodity_attr_box .input_wrap .title_input {
  width: 100%;
  font-size: 30rpx;
  margin: 10rpx;
  font-weight: 700;
}
.commodity_attr_box .input_wrap .detail_input {
  width: 100%;
  height: 320rpx;
  font-size: 30rpx;
  margin: 10rpx;
}
.commodity_attr_box .edit_wrap {
  display: flex;
  flex-direction: row;
}
.commodity_attr_box .edit_wrap .cancel {
  background-color: rgba(214, 214, 214, 0.37);
  box-shadow: 0px 0px 4px 0px #c7c7c7;
  color: #000000;
  width: 200rpx !important;
  margin: 0rpx 10rpx 0rpx 5rpx;
}
.commodity_attr_box .edit_wrap .confirm {
  border-radius: 24rpx;
  background-color: #80bee2;
  box-shadow: 0px 0px 4px 0px #c7c7c7;
  color: white;
  width: 530rpx !important;
  margin: 10rpx;
  margin: 0rpx 10rpx 0rpx 5rpx;
}
