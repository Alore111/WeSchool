<view class="page">
  <view class="contain">
    <swiper indicator-dots='true' indicator-color="rgba(223, 223, 223, 0.39)" indicator-active-color='rgb(235, 21, 21)' style="height: {{Height > 300 ? 700+'rpx':Height+'px'}};">
      <block wx:for="{{Photo}}" wx:key="Photo" class="photo">
        <swiper-item >
          <image src="{{item}}"  mode="aspectFill" style="z-index: 11;" bindtap="ShowImg" data-index="{{index}}"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="content_first">
      <view class="content_Title">{{Title}}</view>
      <text class="content_Text">{{Text}}</text>
      <view class="content_Label" >#{{Label}}</view>
      <view class="content_Time" >{{Time}}</view>
    </view>
    <view class="Line"></view>
    <view class="comment">
      <view class="All_Comment" wx:if="{{CommentNum!=0}}">共 {{CommentNum}} 条评论</view>
      <view class="All_Comment" wx:if="{{CommentNum==0}}">这里还没有评论哟~</view>
      <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="Send_Commend" bindtap="Comment_Inputting">
          <image src="../text.jpg" class="text_user"/>
          <span class="{{isChecked?'old_Comment_second':'new_Comment_second'}}">
            <textarea placeholder="来发句评论吧ヾ(≧▽≦*)o" name="InputComment"  value="{{Input}}" auto-height></textarea>
          </span>
          <span wx:if="{{!isChecked}}" class="Pre_Send">
            <button form-type="submit" class="Sending" hover-class="Sending-hover">发送</button>
          </span>
        </view>
      </form>
      <view class="Show_Commend" wx:for="{{ShowList}}" wx:key="kk" data-item="item">
        <image src="../text.jpg" class="text_user"/>
        <span class="text_username">土拨鼠
          <view class="Comment_Content">{{item.InputContent}}
            <span class="Comment_Time">{{item.InputTime}}</span>
          </view>
        </span>
        <view class="Line_Second"></view>
      </view>
    </view>

    

  </view>
</view>