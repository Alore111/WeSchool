.page{
  width:100%;
  height:100%;
  margin: 0;
  overflow: hidden;
}
.contain{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

swiper{
  width: 100%; 
}
swiper image{
  width: 100%;
  height: 100%;
}
swiper .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  display: inline-flex;
  justify-content: space-between;
}
.content_first{
  padding-top: 35rpx;
  width:700rpx;
  line-height: 45rpx;
}
.content_Title{
  font-size: 33rpx;
  font-weight: 550;
}
.content_Text{
  font-size: 28rpx;
}
.content_Label{
  color:rgb(255, 190, 70);
  font-size: 28rpx;
}
.content_Time{
  font-size: 23rpx;
  color:rgba(78, 78, 78, 0.541);
  position: relative;
  top: 24rpx;
}
.Line{
  background: #9b9b9b48;
  width: 95%;
  height: 1rpx;
  margin-top: 55rpx;
 }
 .comment{
  width:100%;
 }
 .All_Comment{
   font-size: 23rpx;
   margin: 28rpx 20rpx;
   color: rgb(61, 61, 61);
 }
 .text_user{
   width:58rpx;
   height: 58rpx;
   border-radius: 100rpx;
   margin-left: 19rpx;
 }
 .old_Comment_second{
   width:630rpx;
   min-height: 56rpx;
   background-color: rgba(202, 202, 202, 0.322);
   margin-top:2rpx;
   color: rgb(63, 63, 63);
   border-radius: 40rpx;
   margin-left: 20rpx;
   display: flex;
   align-items: center;
   justify-content: center;
   
 }
 .old_Comment_second textarea{
   width:95%;
   font-size: 27rpx;
 }
 .new_Comment_second{
   width:480rpx;
   min-height: 56rpx;
   background-color: rgba(202, 202, 202, 0.322);
   margin-top:2rpx;
   color: rgb(63, 63, 63);
   border-radius: 40rpx;
   margin-left: 20rpx; 
   display: flex;
   align-items: center;
   justify-content: center;
 }
 .new_Comment_second textarea{
  width:95%;
  font-size: 27rpx;
}
 .Sending{
  color: rgba(63, 63, 63, 0.986);
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  background-color: rgba(38, 176, 255, 0.308);
  padding: 0rpx;
  box-shadow: 0px 0px 4px 0px #c7c7c7;
 }
 .Sending-hover{
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 3px rgba(153, 153, 153, 0.507) inset;
 }
 .Pre_Send{
  height: 58rpx;
  width: 145rpx!important;
  display: flex;
  position: relative;
  left: 15rpx;
 }
 
 .Send_Commend{
   display: flex;
   flex-direction: row;
   align-items: center;
 }
 .Show_Commend{
   position: relative;
   top: 35rpx;
 }
 .text_username{
   color: rgba(94, 94, 94, 0.541);
   font-size: 24rpx;
   position: relative;
   bottom:73rpx;
   left:85rpx;
   display: flex;
   flex-direction:column;
 }
 .Comment_Content{
  color:rgb(54, 54, 54);
 }
 .Line_Second{
  background: #9b9b9b48;
  width: 87%;
  height: 1rpx;
  margin-left: 90rpx;
  position: relative;
  bottom: 38rpx;
 }
 .Comment_Time{
  font-size: 20rpx;
  color:rgba(94, 94, 94, 0.541);
 }
 



 
 


