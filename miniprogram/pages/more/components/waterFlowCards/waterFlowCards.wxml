<scroll-view  scroll-y="true"  style="height:{{windowHeight}}px; background-color: rgba(153, 153, 153, 0.11);" bindscrolltolower="testFnc" lower-threshold="300" bindscrolltoupper="onPullDownRefresh" upper-threshold="-30" enable-back-to-top="{{true}}" fast-deceleration="true" paging-enabled="true">

    <view class='content' style="opacity: {{list[0] ? 1 : 0}};">
      <view class="left">
        <view wx:for="{{leftList}}" wx:key="leftList">
          <!-- <loveCards wx:if="{{item.Title == '闲聊'}}" item="{{item}}" type="left" bind:ShowContent="getBackData"></loveCards> -->
          <campusCards item="{{item}}" type="left" tabItemIndex="{{index}}" />
        </view>
      </view>

      <view class="right">
        <view wx:for="{{rightList}}" wx:key="rightList">
          <campusCards item="{{item}}" type="right" />
        </view>
      </view>

    </view>
    <!-- 边界处理 -->
    <view class="DataNull" wx:if="{{loadAll}}">-无更多内容-</view>
</scroll-view>