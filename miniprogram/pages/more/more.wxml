
<!-- 封号 -->
<view class="title" wx:if="{{campus_account}}">
  <!-- <view>{{describe}}</view> -->
</view>

<view class="head">
    <!-- 状态栏 -->
    <view style="height: {{statusBarHeight}}px;" />
    <!-- 导航栏 -->
    <view class="head_second" style="height: {{lineHeight}}px;">
      <!-- 头像 -->
      <view class="avatarBox">
        <image src="{{iconUrl}}" catchtap="navigate" id="myself"></image>
      </view>

      <!-- 搜索框 -->
      <view class="searchFrame">
        <image src="../../images/search.png" />
        <input value="{{search}}" bindinput="search_Input" />
      </view>

      <!-- 消息列表 -->
      <view class="newInfo">
        <image src="../../images/information.png" bindtap="navigate" id="NewInfo"></image>
        <!-- 消息提示 - 数字 -->
        <view class="newInfo_redPoint" id="NewInfo" catchtap="navigate" wx:if="{{NewInfo}}">
          <text>{{NewInfo}}</text>
        </view>
      </view>
    </view>
</view>

<scroll-view enable-back-to-top="true" fast-deceleration="true" paging-enabled="true" bindscrolltolower="onReachBottom" lower-threshold="300" bindscrolltoupper="onPullDownRefresh" upper-threshold="0"  scroll-y="{{true}}" style="height: {{windowHeight }}px;" wx:if="{{campus_account!=true}}" class="page" >
  <!-- 填充 -->
  <view style="position: relative; padding-top: {{ 3 + (statusBarHeight + lineHeight)}}px; width: 100%;"></view>
  <view style="position: relative; padding-top: {{(showscroll? 140: 0) }}rpx; width: 100%;"></view>

  <!-- 加载 - 小圆圈 -->
  <image class="showLoading" mode="aspectFit" animation="{{animation}}" src='../../images/loading.png' wx:if="{{showLoading==0}}"></image>
  <view class="Line"></view>

  <!-- 标签 -->
  <TabScroll 
  type="校友圈标签" 
  tabItem="{{tabitem}}" 
  bind:setTab="setTab" 
  id="TabScroll" 
  showTab="false"></TabScroll>
  <view class="Line"></view>

  <swiper bindchange="waterChange" bindtransition="waterTransition" bindanimationfinish="waterAnimationFinish" current="{{activeItem}}" style="height: 100vh;">
    <!-- style="left: {{index*windowWidth}}px; " -->
    <block wx:for="{{allList}}" wx:key="body" wx:for-index="index">
      <swiper-item>
        <!-- 页面主体 -->
        <waterFlowCards 
        id="waterFlowCards{{index}}"
        list="{{item}}"
        openusername="{{openusername}}" 
        tabitem="{{tabitem}}"
        index="{{index}}"
        bind:getData="getData"
        ></waterFlowCards>
      </swiper-item>
      
    </block>
  </swiper>
  
  

  <!-- 发布按钮 -->
  <view class="img-button content_btn content_btn_add" style="display:{{school=='游客登录'?'none':'fixed'}}" bindtap="showPopUps" id="PublishContent">
    <image src="/images/btn_feed@2x.png"></image>
  </view>
  <!-- 我的发布按钮 -->
  <view class="img-button content_btn content_btn_user" bindtap="navigate" style="display:{{school=='游客登录'?'none':'fixed'}}" id="UserContent">
    <image src="../../images/User.png"></image>
  </view>

  <!-- 弹窗 -->
  <view class="popUps {{showPopUps ? 'popUpsActive' : ''}}">
    <!-- <view class="mengban {{showPopUps ? 'mengbanActive' : ''}}"></view> -->
    <!-- 点击事件 -->
    <view class="bindBoxFlex">

      <view class="bindBox" bindtap="show_PublishContent">
        <view class="imageBox" style="background-color: rgb(236, 158, 200);">
          <image src="./images/course.png"></image>
        </view>
        <text>快速发布</text>
      </view>

      <view class="bindBox" bindtap="navigate" id="PublishContent">
        <view class="imageBox" style="background-color: rgb(125, 222, 200);">
          <image src="./images/child.png"></image>
        </view>
        <text>其 他</text>
      </view>

    </view>

    <!-- 取消 -->
    <view class="cancelBox">
      <view class="cancel" bindtap="showPopUps">
        <image src="./images/close.png"></image>
      </view>
    </view>
    
  </view>
  
  <!-- 快速发布组件 -->
  <PublishContent 
    id="PublishContent"
    showModel="{{showModel}}" 
    current="{{current}}"
    bind:ReOnLoad="onLoad"
    ></PublishContent>
</scroll-view>
