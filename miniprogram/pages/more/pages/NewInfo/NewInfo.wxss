   margin-left: 10rpx;
   font-size: 26rpx;
   color: rgb(102, 100, 100);
}
.demo .text .time {
   line-height: 40rpx;
   font-size: 25rpx;
   color: rgb(137, 137, 136);
}
.demo .zan {
   width: 35rpx;
