}
.demo image {
   width: 80rpx;
   height: 80rpx;
   margin-right: 20rpx;
   border-radius: 10rpx;
}
.demo image:first-child {
   border-radius: 50%;
}
.demo .text .name {
   /* font-weight: 700; */
   font-size: 28rpx;
   color: black;
}
.text .firstLine {
   line-height: 40rpx;
}
