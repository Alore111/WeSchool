
.demo {
   display: flex;
   width: 100%;
   padding: 20rpx 0 0 20rpx;
   border-bottom: 1rpx solid #ccc;
   /* justify-content: space-between; */
}
.demo .picture {
   width: 100rpx;
   height: 100rpx;
   /* background-color: yellow; */
}
.body {
   width: 500rpx;
