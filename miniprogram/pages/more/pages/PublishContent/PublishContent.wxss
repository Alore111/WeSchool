/* 1. 头部 */
.head{
    width: 100%;
    position:fixed; 
    background-color: white;
    z-index: 2;
}
.navigation {
    display: flex;
    justify-content: center;
    align-items: center;
}
/* 2. 选择频道 */
.choose_Channel {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 10rpx 20rpx;
    background-color: rgb(248, 248, 248);
}
.choose_Channel .left{
  display: flex;
  justify-content: center;
  align-items: center;
}
.choose_Channel .left image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}
.choose_Channel .left text{
  font-size: 28rpx;
  font-weight: 550;
  color: rgb(119, 195, 173);
  letter-spacing: 3rpx;
}
.choose_Channel .right {
  width: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.choose_Channel .right text {
  width: 200rpx;

  display: inline-block;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

  font-size: 24rpx;
  color: #ccc;
  letter-spacing: 2rpx;
}
.choose_Channel .right image {
    width: 30rpx;
    height: 30rpx;
    margin-left: 10rpx;
}
/* 主体 */
.mainBody {
  margin: 30rpx 20rpx;
}
.mainBody .mainTitle{
  margin: 15rpx;
  margin-left: 0;
  color: rgb(128, 128, 128);
}
.mainBody .mainText {
  margin: 20rpx;
  margin-left: 0;
}
.mainBody .mainText textarea {
  width: 98%;
  color: rgb(128, 128, 128);
}


.Line{
    background: #9b9b9b48;
    width: 100%;
    height: 1rpx;
}
.edit,
