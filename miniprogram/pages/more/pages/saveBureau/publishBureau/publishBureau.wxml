<!--pages/more/pages/saveBureau/publishBureau/publishBureau.wxml-->
<view class="head">
  <view class="arrow" bindtap="back">
    <image src="../../../../../images/arrow.png"/>
  </view>
</view>
<view class="All">
  <view class="activityTheme">活动主题</view>
  <view class="categories">
    <view wx:for="{{arry}}" wx:key="id">
      <view class="categoriesContent" bindtap="hh" id="{{index}}">
        <view class="circle background-color_{{index%2}}"></view>
        <text>{{item.name}}</text>
      </view>
    </view>
  </view>
  <view class="activityDetails">活动详情</view>
    <view class="inputContent">
      <view class="inputTitle">
        <textarea placeholder="在此输入活动详情，如时间、地点和活动内容，禁止以任何形式拉群或宣传群聊"></textarea>
      </view>
      <view class="inputImg">
        <view class="Img"></view>
      </view>
    </view>
    <view class="position">位置信息</view>
    <view class="choosePosition">
    </view>
    <view class="totalNum">总人数</view>
    <view class="controlNum">
      <view class="man">
        <text>男</text>
        <image src="../../../../../images/sexm.png"/>
        <view class="manNum">
          <view class="reduceNum">-</view>
          <view class="num">2</view>
          <view class="addNum">+</view>
        </view>
      </view>
      <view class="woman">
        <text>女</text>
        <image src="../../../../../images/sexw.png"/>
        <view class="womanNum">
          <view class="reduceNum">-</view>
          <view class="num">2</view>
          <view class="addNum">+</view>
        </view>
      </view>
    </view>
    <view class="submit">
      <text class="sure">确定</text>（需消耗100人品）
    </view>
</view>