@import "../../template/more/template.wxss";

page {
  background-color: rgb(240, 240, 240);
}

.container {
  padding: 0 0;
}

.bgcImage {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: skyblue;
}

.userInfo {
  position: absolute;
  left: 80rpx;
  top: 45%;
  display: flex;
  justify-content: space-between;
}
/* 头像 */
.userAvatar {
  display: flex;
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
  border: 5rpx solid #fff;
}
.userAvatar .userAvatarImg {
  display: flex;
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #fff;
}
/* 角色信息text */
.userInfoTxt {
  margin: 10rpx 0 0 20rpx;
  color: rgb(233, 253, 253);
  letter-spacing: 3rpx;
}
.userName {
  margin-bottom: 10rpx;
}
.userAcademy {
  font-size: 20rpx;
}
/* 班级/专业 */
.userInfoDialog {
  position: absolute;
  bottom: -150rpx;
  margin: 0 20rpx;
  width: 710rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: #ccc  0 0 5rpx 2rpx;
  color: rgb(106, 106, 106);
}
/* userInfo_item */
.userInfo_item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  line-height: 100rpx;
}
.userInfo_item image{
  width: 50rpx;
  height: 50rpx;
  padding: 0 0 0 20rpx;
}
/* 不知道为什么 .userInfo_item text:first-child 选不到它，只好加个类名了 */
.userInfo_item .title{
  flex: 1;
  text-align: start;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.userInfo_item text:last-child{
  margin-right: 20rpx;
  font-size: 20rpx;
  color: rgb(186, 186, 186);
  letter-spacing: 2rpx;
}

/* 第二个Dialog */
.more {
  margin: 0 20rpx;
  margin-top: 175rpx;
  /* 175 - 150 = 间距 */
  width: 710rpx;
  height: 300rpx;
  background-color: #fff;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: #ccc  0 0 5rpx 2rpx;
  color: rgb(106, 106, 106);
}

.textMarginLeft {
  margin-left: 55rpx;
}
